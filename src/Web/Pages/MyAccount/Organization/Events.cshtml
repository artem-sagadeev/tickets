@page
@using Web.Interfaces
@model EventsModel
@inject ITokenService TokenService
@{
    ViewData["Title"] = "My events";
}

<h1 class="mb-3">My events</h1>

<div>
    @foreach (var _event in Model.Events)
    {
        <div class="row mt-4">
            <div class="col-2">
                <img src="/@_event.ImageName" class="rounded float-start" style="width: 200px; height: 200px" alt="">
            </div>
            <div class="col-10">
                <div class="fs-4 fw-bold">
                    <p>
                        <a asp-page="/Events/Event" asp-route-id="@_event.Id" style="color: black">@_event.Title</a>
                    </p>
                </div>
                <div class="fs-6">
                    <p class="text-break">
                        @_event.Description
                    </p>
                </div>
                <div class="fs-6">
                    <p>
                        @_event.Date
                    </p>
                </div>
                <div class="fs-6">
                    <p>
                        <a asp-page="/Organizations/Organization" asp-route-id="@_event.OrganizationId">Spain football association</a>
                    </p>
                </div>
            </div>
        </div>
    }
</div>