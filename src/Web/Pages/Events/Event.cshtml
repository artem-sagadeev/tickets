@page
@model Web.Pages.Events.Event

<div class="row mt-4">
    <div class="col-2">
        <img src="/standup.jpg" class="rounded float-start" style="width: 200px; height: 200px" alt="">
    </div>
    <div class="col-auto">
        <div class="fs-4 fw-bold">
            <p>
                Artur Chaparyan. Standup concert.
            </p>
        </div>
        <div class="fs-6">
            <p>
                Standup concert of the famous russian comic Artur Chaparyan. He will make you smile even in very sad day.
            </p>
        </div>
        <div class="fs-6">
            <p>
                23.12.2023
            </p>
        </div>
        <div class="fs-6">
            <p>
                <a asp-page="/Organizations/Organization">StandUp club Kazan</a>
            </p>
        </div>
    </div>
</div>

<form method="POST">
    <div class="row mt-4">
        <label class="col-form-label col-auto" for="type">Type</label>
        <div class="col-3">
            <select class="form-select" aria-label="Choose type" name="type" id="type">
                <option value="One">Cheap</option>
                <option value="Two">Normal</option>
                <option value="Three">Expensive</option>
            </select>
        </div>
        <label class="col-form-label col-auto" for="count">Count</label>
        <div class="col-1">
            <input type="number" class="form-control" id="count"/>
        </div>
        <div class="col-auto">
            <button type="submit" class="btn btn-primary">Buy</button>
        </div>
    </div>
</form>